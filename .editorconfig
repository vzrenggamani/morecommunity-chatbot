# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Unix-style line endings (critical for Docker/Linux compatibility)
end_of_line = lf

# Shell scripts must use LF
[*.sh]
end_of_line = lf

# Python files
[*.py]
indent_style = space
indent_size = 4
end_of_line = lf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = lf

# Markdown
[*.md]
trim_trailing_whitespace = false
end_of_line = lf

# Dockerfile
[Dockerfile*]
end_of_line = lf
